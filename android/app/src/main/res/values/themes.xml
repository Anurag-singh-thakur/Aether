<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Aether" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/main_color</item>
        <item name="colorOnPrimary">@color/black_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_color</item>
        <item name="colorSecondaryVariant">@color/_5</item>
        <item name="colorOnSecondary">@color/overlay_dark_60</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SpinnerTheme" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:fontFamily">@font/primary_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:divider">#A8A8A8</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>
</resources>