<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.home.HomeActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/fragment_container_view_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_view_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.gauravk.bubblenavigation.BubbleNavigationLinearView
        android:id="@+id/bottom_navigation_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bubble_bottom_navigation_bg_color"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/bottom_navigation_view_item_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_colorActive="@color/bubble_bottom_navigation_item_active_color"
            app:bt_colorInactive="@color/bubble_bottom_navigation_item_inactive_color"
            android:layout_weight=".20"
            app:bt_icon="@drawable/ic_home"
            app:bt_padding="@dimen/bubble_bottom_navigation_item_internal_padding"
            app:bt_shape="@drawable/bubble_bottom_navigation_item_transition_background_item"
            app:bt_title="@string/bubble_bottom_navigation_item_title_home"
            app:bt_titlePadding="@dimen/bubble_bottom_navigation_item_internal_padding" />
        <!-- Add more child items here - max upto 5 -->
        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/bottom_navigation_view_item_books"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="false"
            app:bt_colorActive="@color/bubble_bottom_navigation_item_active_color"
            app:bt_colorInactive="@color/bubble_bottom_navigation_item_inactive_color"
            app:bt_icon="@drawable/ic_books"
            android:layout_weight=".20"
            app:bt_padding="@dimen/bubble_bottom_navigation_item_internal_padding"
            app:bt_shape="@drawable/bubble_bottom_navigation_item_transition_background_item"
            app:bt_title="@string/bubble_bottom_navigation_item_title_books"
            app:bt_titlePadding="@dimen/bubble_bottom_navigation_item_internal_padding" />
        <!-- Add more child items here - max upto 5 -->

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/bottom_navigation_view_item_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="false"
            app:bt_colorActive="@color/bubble_bottom_navigation_item_active_color"
            app:bt_colorInactive="@color/bubble_bottom_navigation_item_inactive_color"
            android:layout_weight=".20"
            app:bt_icon="@drawable/ic_classroom"
            app:bt_padding="@dimen/bubble_bottom_navigation_item_internal_padding"
            app:bt_shape="@drawable/bubble_bottom_navigation_item_transition_background_item"
            app:bt_title="@string/bubble_bottom_navigation_item_title_class"
            app:bt_titlePadding="@dimen/bubble_bottom_navigation_item_internal_padding" />
        <!-- Add more child items here - max upto 5 -->

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/bottom_navigation_view_item_exam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="false"
            app:bt_colorActive="@color/bubble_bottom_navigation_item_active_color"
            android:layout_weight=".20"
            app:bt_colorInactive="@color/bubble_bottom_navigation_item_inactive_color"
            app:bt_icon="@drawable/ic_test"
            app:bt_padding="@dimen/bubble_bottom_navigation_item_internal_padding"
            app:bt_shape="@drawable/bubble_bottom_navigation_item_transition_background_item"
            app:bt_title="@string/bubble_bottom_navigation_item_title_exam"
            app:bt_titlePadding="@dimen/bubble_bottom_navigation_item_internal_padding" />
        <!-- Add more child items here - max upto 5 -->

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/bottom_navigation_view_item_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="false"
            app:bt_colorActive="@color/bubble_bottom_navigation_item_active_color"
            app:bt_colorInactive="@color/bubble_bottom_navigation_item_inactive_color"
            android:layout_weight=".20"
            app:bt_icon="@drawable/ic_more"
            app:bt_padding="@dimen/bubble_bottom_navigation_item_internal_padding"
            app:bt_shape="@drawable/bubble_bottom_navigation_item_transition_background_item"
            app:bt_title="@string/bubble_bottom_navigation_item_title_more"
            app:bt_titlePadding="@dimen/bubble_bottom_navigation_item_internal_padding" />
        <!-- Add more child items here - max upto 5 -->

    </com.gauravk.bubblenavigation.BubbleNavigationLinearView>

</androidx.constraintlayout.widget.ConstraintLayout>